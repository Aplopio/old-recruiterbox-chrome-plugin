{
  "manifest_version": 2,

  "name": "Recruiterbox sample",
  "description": "This extension creates Recruiterbox candidate from someone's LinkedIn profile",
  "version": "1.0",
  "background": {"scripts": ["lib/jquery.min.js", "background.js"]},
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["lib/jquery.min.js", "lib/underscore-min.js", "template.js", "content.js"]
    }
  ],
  "web_accessible_resources": [
    "css/style.css"
  ],
  "permissions": [
    "cookies", "tabs", "<all_urls>"
  ],
  "browser_action": {
    "default_icon": "images/icon.png"
  }
}